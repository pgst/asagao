<% @page_title = @member ? @member.name + "さんのブログ" : "会員のブログ" %>
<h1><%= @page_title %></h1>

<% if current_member %>
  <div class="toolbar">
    <%= link_to "ブログ記事の作成", :new_entry,
                                   class: 'btn btn-sm btn-info text-white' %>
  </div>
<% end %>

<% if @entries.present? %>
  <% @entries.each do |entry| %>
    <h2><%= entry.title %></h2>
    <p>
      <%= truncate(entry.body, length: 80) %>
      <%= link_to 'もっと読む', entry, class: 'btn btn-sm btn-info text-white' %>
    </p>
    <%= render 'footer', entry: entry %>
  <% end %>
  <%# kaminariをBootstrap5で表示 %>
  <%= paginate @entries, theme: 'bootstrap-5' %>
<% else %>
  <p>記事がありません。</p>
<% end %>
