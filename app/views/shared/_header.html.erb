<%= image_tag 'logo.gif', size: '272x48', alt: 'Morning Glory' %>

<% if current_member %>
<ul class="account-menu d-flex justify-content-end">
  <%= menu_link_to current_member.name + 'さん', :account, class: 'd-inline me-3' %>
  <%= menu_link_to 'ログアウト', :session,
                                 data: { turbo_method: :delete,
                                         turbo_confirm: 'ログアウトしますか？'
                                 },
                                 class: 'btn btn-sm btn-secondary text-white d-inline'
  %>
</ul>
<% end %>

<nav class="menubar">
  <ul>
    <%= menu_link_to 'TOP', :root %>
    <%= menu_link_to 'ニュース', :articles %>
    <%= menu_link_to 'ブログ', '#' %>
    <% if current_member %>
      <%= menu_link_to '会員名簿', :members %>
      <%= menu_link_to '管理ページ', '#' %>
    <% end %>
  </ul>
</nav>
